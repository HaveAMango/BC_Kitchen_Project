<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:scrollbars="vertical"
    tools:context=".Help">

    <TextView
        android:id="@+id/helpHeadIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFloatingButton"
        android:padding="8dp"
        android:text="@string/introduction"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpHeadIntro">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helpIntroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_introduction" />

            <TextView
                android:id="@+id/helpFridge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/fridge"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/helpFridgeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_fridge" />

            <TextView
                android:id="@+id/helpHeadPantry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/pantry"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pantry"/>


            <TextView
                android:id="@+id/helpPantryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_pantry" />

            <TextView
                android:id="@+id/helpHeadRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/recipes"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/helpRecipesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_recipes" />

            <TextView
                android:id="@+id/helpHeadGroceries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/grocery_list"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/grocery"/>
            <TextView
                android:id="@+id/helpGroceriesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_grocery_list" />

            <TextView
                android:id="@+id/helpHeadSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/helpSettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_settings" />

            <TextView
                android:id="@+id/helpHeadFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:text="@string/feedback"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/feedback"/>

            <TextView
                android:id="@+id/helpFeedbackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5dp"
                android:padding="5dp"
                android:text="@string/help_feedback" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ratings"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>