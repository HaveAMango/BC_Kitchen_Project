<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Enable Night Mode">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="NIGHT"
            android:summaryOff="Night Mode deactivated"
            android:summaryOn="Night Mode activated"
            android:title="Night mode" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Change Color Scheme">
        <ListPreference
            android:defaultValue="false"
            android:entries="@array/ColorScheme"
            android:entryValues="@array/ColorSchemeValues"
            android:key="COLORSCHEME"
            android:title="Color Scheme" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Change Text Size">
        <ListPreference android:defaultValue="false"
            android:entries="@array/textSize"
            android:entryValues="@array/textSizeValues"
            android:key="TEXTSIZE"
            android:title="Text Size"/>
    </PreferenceCategory>

</PreferenceScreen>